{
    "name": "armonia-tech/armonia-elasticsearch",
    "description": "Libraries for elastic search",
    "keywords": ["armonia", "armonia tech", "elastic search"],
    "homepage": "https://github.com/armonia-tech/armonia-search.git",
    "license": "BSD-3-Clause", 
    "config": {
        "vendor-dir": "vendors",
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": { "ArmoniaElasticSearch\\": "src/" }
    },
    "authors": [
        {
            "name": "Armonia Tech",
            "email": "developer@armonia-tech.com"
        }
    ],
    "require": {
        "elasticsearch/elasticsearch": "8.8.0"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.10"
    },
    "extra": {
        "discovery": {
            "psr/http-factory-implementation": "GuzzleHttp\\Psr7\\HttpFactory"
        }
    }
}
